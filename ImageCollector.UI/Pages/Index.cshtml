@page
@model IndexModel
@{
    ViewData["Title"] = "Search";
}

<div class="container">
    <h2>Search by Location</h2>
    <form method="post">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search by location..." asp-for="Location" />
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </div>
    </form>
    <div class="row">
        @foreach (var image in Model.Images)
        {
            <div class="col-md-3 image-item">
                <img src="@image.ImageUrl" class="img-fluid" alt="@image.Description" />
                <p>@image.Description</p>
            </div>
        }
    </div>
    <div class="d-flex justify-content-center mt-4">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <button class="btn btn-secondary mx-1" type="button" onclick="window.location.href='?page=@i'">@i</button>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
}
